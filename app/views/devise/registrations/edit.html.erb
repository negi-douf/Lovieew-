<div class="container">
  <div class="col col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <h2>マイページ</h2>
    <br />

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, class: "form form-control" %>
      </div>
      <br />

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label "パスワード変更" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>
      <br />

      <div class="field">
        <%= f.label "パスワード再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form form-control" %>
      </div>
      <br />

      <div class="field" id="input-file">
        <%= show_avatar(@user) if show_avatar(@user) %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <br />

      <div class="field">
        <%= f.label :current_password %> <i>(変更しない場合は不要)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form form-control" %>
      </div>
      <br />

      <div class="actions">
        <%= f.submit "更新", class: "btn submit-btn btn-primary" %>
      </div>
    <% end %>
    <br />

    <h3>アカウント削除</h3>

    <p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか?" }, method: :delete, class: "btn btn-danger" %></p>
    <br />
    
    <%= link_to "戻る", :back %>
  </div>
</div>
