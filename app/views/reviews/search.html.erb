<div class="container">
  <div class="col col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <div class="title">
      <h1>レビュー検索</h1>
    </div>

    <div class="input-group search-form">
      <%= form_for @keyword do |f| %>
        <%= f.text_field_tag :keyword, @keyword, class: "form-control" %>
        <%= button_tag :type => "submit", :class =>"btn btn-primary btn-s-md" do %>
          <i class="fa fa-search"></i>
        <% end %>
      <% end %>
    </div>

    <div class="reviews">
      <% @reviews.each do |review| %>
        <div class="review">
          <%= render "review", review: review %>
        </div>
      <% end %>
    </div>
  </div>
</div>
